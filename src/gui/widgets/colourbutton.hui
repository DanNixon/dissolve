#ifndef DUQ_COLOURBUTTON_H
#define DUQ_COLOURBUTTON_H

#include <QPushButton>

// Forward declarations
/* none */

// ColourButton
class ColourButton : public QPushButton
{
	Q_OBJECT

	public:
	// Constructor
	ColourButton(QWidget* parent);


	/*
	// Content
	*/
	private:
	// Colour currently displayed in button
	QColor colour_;

	public:
	// Set colour displayed in button
	void setColour(QColor colour);
	// Retrieve colour displayed in button
	QColor colour();
	// Select new colour
	bool selectColour();

	protected:
	// Paint event callback
	void paintEvent(QPaintEvent* event);
};

#endif
